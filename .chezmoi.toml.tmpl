{{ $email := promptStringOnce . "email" "What is your email address" }}
{{ $username := promptStringOnce . "username" "What is your username" }}
{{ $githubUsername := promptStringOnce . "githubUsername" "What is your GitHub username" }}
{{ $hasGUI := promptBoolOnce . "hasGUI" "Does this machine have a GUI" }}

[data]
    email = {{ $email | quote }}
    username = {{ $username | quote}}
    githubUsername = {{ $githubUsername | quote }}
    hasGUI = {{ $hasGUI }}
    
[git]
    autoCommit = true
    autoPush = true

[edit]
    {{ if or ( lookPath "code") (findExecutable "code" (list "bin" "/usr/bin" ".nix-profile/bin")) }}
    command = "code"
    args = ["--wait"]
    {{ else if or ( lookPath "nvim") (findExecutable "nvim" (list "bin" "/usr/bin" ".nix-profile/bin")) }}
    command = "nvim"
    {{ else if or ( lookPath "vim") (findExecutable "vim" (list "bin" "/usr/bin" ".nix-profile/bin")) }}
    command = "vim"
    {{ else if or ( lookPath "vi") (findExecutable "vi" (list "bin" "/usr/bin" ".nix-profile/bin")) }}
    command = "vi"
    {{ else }}
    command = "nano"
    {{ end }}